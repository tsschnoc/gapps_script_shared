<?xml version="1.0" encoding="UTF-8" ?>
<Module> 
  <ModulePrefs title="Google Calendar SF Timetracking" author="Fred.vom.Jupiter@parx.com" height="385">
  <OAuth> 
    <Service name="google"> 
      <Access url="https://www.google.com/accounts/OAuthGetAccessToken" method="GET" />
      <Request  url="https://www.google.com/accounts/OAuthGetRequestToken?scope=http://www.google.com/calendar/feeds/" method="GET" /> 
      <Authorization url="https://www.google.com/accounts/OAuthAuthorizeToken?oauth_callback=http://oauth.gmodules.com/gadgets/oauthcallback" />
    </Service> 
  </OAuth> 
  <Optional feature="google.calendar-0.5.read" /> 
  <Require feature="dynamic-height"/>
</ModulePrefs> 

<Content type="html">
<![CDATA[
    <html>
      <head>
        <script src="https://www.google.com/jsapi"></script>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.0/jquery.min.js"></script>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js"></script>
        <script type="text/javascript" src="https://gdata-samples.googlecode.com/svn/trunk/gadgets/blogger/popup.js"></script>
        <style type="text/css">
          #main {
            font-size: 10px;
          }

          #main ul, #mail ol {
            list-style: none;
            margin: 0;
            padding: 0;
          }
        </style>
      </head>
      <body>
        <div id="errors" style="display: none"></div>

        <div id="main" style="display:none">
          <div id="dialog">
            <form>
              <div>
                <label for="Case">Case</label>
                <select id="Case" name="Case" class="Case">
                </select>
              </div>
              <div>
                <input type="text" name="Description" /> 
              </div>

              <input type="hidden" name="ctz" />
              <button class="generate">Save Event</button>
            </form>

          </div>
        </div>

        <div id="loading">
          <h3>Loading...</h3>
          <p><img src="https://gdata-samples.googlecode.com/svn/trunk/gadgets/blogger/ajax-loader.gif"></p>
        </div>

        <div id="approval" style="display: none">
          <a href="#" id="personalize">Allow access to Google Calendar</a>
        </div>

        <div id="waiting" style="display: none">
          <a href="#" id="approvalLink">I've approved access</a>
        </div>

        <script type="text/javascript" src="https://raw.github.com/tsschnoc/gapps_script_shared/master/SFTime/calendar.js"></script>
      </body>
    </html>
  ]]> </Content> </Module>